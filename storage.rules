rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to upload and read chat files
    match /chat_files/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }

    // Allow authenticated users to read production files, but only admins may write
    match /production_files/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Deny all other storage access by default
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}


