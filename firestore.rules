rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Public lookups used for dropdowns
    match /jobs/{jobId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }

    match /departments/{deptId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }

    match /roles/{roleId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }

    // Users collection
    match /users/{userId} {
      allow read: if request.auth != null && (request.auth.token.admin == true || request.auth.uid == userId);
      allow create: if request.auth != null && request.auth.token.admin == true; // Only admins create users
      allow update: if request.auth != null && (request.auth.token.admin == true || request.auth.uid == userId);
      allow delete: if request.auth != null && request.auth.token.admin == true;
    }

    // Fallback: deny everything else
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
